/* app.wxss */
@import "./styles/design-system.wxss";
@import "./styles/theme.wxss";
/* 动效统一由 animations2.wxss 提供 */

/* 全局样式 */
page {
  background-color: var(--theme-bg-primary);
  font-family: var(--font-family-primary);
  font-size: var(--font-size-base);
  line-height: var(--line-height-normal);
  color: var(--theme-text-primary);
  min-height: 100vh;
}

/* 页面背景装饰 */
/* 移除复杂装饰背景，采用主题变量 */

/* 容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  position: relative;
}

/* 主题背景：白天淡雅清新 / 夜晚深空宇宙 */
.container.theme-light {
  background: linear-gradient(135deg, #f7fbff 0%, #eaf3ff 100%);
}

.container.theme-dark {
  background: radial-gradient(1200rpx at 20% 10%, rgba(64, 78, 120, 0.15), transparent 60%),
              linear-gradient(180deg, #0b1020 0%, #0e1326 100%);
}

/* 页面头部背景 */
.page-header {
  position: relative;
  padding: 48rpx 30rpx 32rpx;
  margin: 0 -30rpx 32rpx;
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  border-radius: 0 0 16rpx 16rpx;
}

.page-header-content {
  text-align: center;
  color: var(--theme-text-white);
}

.page-title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: var(--font-size-base);
  opacity: 0.85;
  font-weight: var(--font-weight-light);
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-body {
  padding: 30rpx;
}

.card-footer {
  padding: 20rpx 30rpx;
  background: #fafafa;
  border-top: 1rpx solid #f0f0f0;
}

/* 文章卡片 */
.post-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
}

.post-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.post-card:active {
  transform: translateY(-8rpx) scale(0.98);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.post-card:active::before {
  opacity: 1;
}

.post-cover {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.post-content {
  padding: 30rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.post-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.post-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.post-date {
  display: flex;
  align-items: center;
}

.post-category {
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 筛选区域标签容器 */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 20rpx 0;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 20rpx;
  border: 1rpx solid #e2e8f0;
  box-shadow: 
    0 6rpx 24rpx rgba(0, 0, 0, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

.tags::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
}

/* 文章列表项中的标签容器 */
.post-content .tags {
  margin: 16rpx 0 0 0;
  padding: 0;
  background: none;
  border: none;
  box-shadow: none;
  gap: 8rpx;
}

.post-content .tags::before {
  display: none;
}

/* 筛选区域标签样式 */
.tag {
  color: #ffffff;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  cursor: default;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.15),
    0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 文章列表项中的极小标签样式 */
.post-content .tag {
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  box-shadow: 
    0 2rpx 6rpx rgba(0, 0, 0, 0.1),
    0 1rpx 3rpx rgba(0, 0, 0, 0.06);
  text-shadow: 0 1rpx 1rpx rgba(0, 0, 0, 0.2);
  opacity: 0.9;
  transform: scale(0.85);
  transform-origin: left center;
}

.tag::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.tag:active::before {
  left: 100%;
}

.tag.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-color: #667eea;
  box-shadow: 
    0 6rpx 20rpx rgba(102, 126, 234, 0.3),
    0 2rpx 8rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-2rpx);
}

/* 筛选区域标签点击效果 */
.tag:active {
  transform: scale(0.96) translateY(-1rpx);
  box-shadow: 
    0 1rpx 4rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.04);
}

.tag.active:active {
  transform: scale(0.94) translateY(0rpx);
  box-shadow: 
    0 4rpx 16rpx rgba(102, 126, 234, 0.35),
    0 2rpx 8rpx rgba(102, 126, 234, 0.25);
}

/* 文章列表项中极小标签的点击效果 */
.post-content .tag:active {
  transform: scale(0.8) translateY(0rpx);
  opacity: 0.7;
  box-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.12),
    0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

/* 标签切换按钮 */
.tag-toggle-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 
    0 4rpx 12rpx rgba(102, 126, 234, 0.25),
    0 2rpx 6rpx rgba(102, 126, 234, 0.15);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.tag-toggle-btn:active {
  transform: scale(0.96);
  box-shadow: 
    0 2rpx 8rpx rgba(102, 126, 234, 0.3),
    0 1rpx 4rpx rgba(102, 126, 234, 0.2);
}

.toggle-text {
  font-size: 24rpx;
  font-weight: 500;
}

.toggle-arrow {
  font-size: 20rpx;
  transition: transform 0.3s ease;
}

/* 按钮 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 
    0 8rpx 24rpx rgba(102, 126, 234, 0.3),
    0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 4rpx 16rpx rgba(102, 126, 234, 0.4),
    0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  color: #666;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.95);
  transform: translateY(1rpx);
}

.btn-outline {
  background: transparent;
  color: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.btn-outline:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
  transform: scale(0.98);
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 60rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.search-box:focus-within {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 
    0 12rpx 40rpx rgba(102, 126, 234, 0.2),
    0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  border: none;
  outline: none;
}

.search-btn {
  margin-left: 20rpx;
  color: #1976d2;
}

/* 筛选器 - 单行显示 */
.filter-container {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  padding: 24rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 
    0 8rpx 25rpx rgba(0, 0, 0, 0.08),
    0 3rpx 10rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
}

.filter-scroll {
  flex: 1;
  overflow-x: auto;
  overflow-y: hidden;
}

.filter-bar {
  display: flex;
  gap: 16rpx;
  align-items: center;
  white-space: nowrap;
}

.filter-categories {
  display: flex;
  gap: 16rpx;
  align-items: center;
  white-space: nowrap;
  width: max-content;
}

.filter-item {
  flex: 0 0 auto;
  min-width: 120rpx;
  padding: 20rpx 24rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #475569;
  background: linear-gradient(135deg, #ffffff 0%, #f1f5f9 100%);
  border-radius: 28rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    0 1rpx 3rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.filter-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-color: #667eea;
  transform: translateY(-2rpx);
  box-shadow: 
    0 12rpx 32rpx rgba(102, 126, 234, 0.25),
    0 4rpx 16rpx rgba(102, 126, 234, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.filter-item:active {
  transform: translateY(1rpx) scale(0.98);
  box-shadow: 
    0 1rpx 4rpx rgba(0, 0, 0, 0.12),
    0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.filter-item.active:active {
  transform: translateY(0) scale(0.96);
  box-shadow: 
    0 8rpx 24rpx rgba(102, 126, 234, 0.3),
    0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: rgba(255, 255, 255, 0.8);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  font-weight: 300;
  opacity: 0.9;
}

/* 加载动画 - 脉冲效果 */
.loading-pulse {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 40rpx;
}

.pulse-dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  animation: pulse 1.4s ease-in-out infinite both;
}

.pulse-dot:nth-child(1) { animation-delay: -0.32s; }
.pulse-dot:nth-child(2) { animation-delay: -0.16s; }
.pulse-dot:nth-child(3) { animation-delay: 0; }

@keyframes pulse {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}

/* 骨架屏加载 */
.skeleton-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite alternate;
}

@keyframes skeleton-loading {
  0% {
    opacity: 0.6;
  }
  100% {
    opacity: 0.9;
  }
}

.skeleton-line {
  height: 24rpx;
  background: linear-gradient(90deg, 
    rgba(102, 126, 234, 0.1) 25%, 
    rgba(118, 75, 162, 0.2) 50%, 
    rgba(102, 126, 234, 0.1) 75%);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  animation: skeleton-shimmer 2s ease-in-out infinite;
}

.skeleton-line.short {
  width: 60%;
}

.skeleton-line.medium {
  width: 80%;
}

@keyframes skeleton-shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  color: #999;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1976d2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 社交链接 */
.social-links {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 30rpx;
}

.social-link {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.social-link:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.social-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

