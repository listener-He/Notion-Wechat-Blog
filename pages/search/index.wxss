/* pages/search/index.wxss */

.container {
  padding: 20rpx;
  background-color: var(--theme-bg-primary);
  min-height: 100vh;
}

/* 搜索头部 */
.search-header {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--theme-bg-secondary);
  border-radius: 32rpx;
  padding: 0 24rpx;
  box-shadow: 0 4rpx 20rpx var(--theme-shadow);
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: var(--theme-text-primary);
}

.search-input::placeholder {
  color: var(--theme-text-muted);
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  border-radius: 50%;
  margin-left: 20rpx;
}

.search-icon {
  font-size: 28rpx;
  color: white;
}

/* 搜索历史 */
.search-history {
  margin-bottom: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--theme-text-primary);
}

.history-clear {
  font-size: 24rpx;
  color: var(--theme-text-muted);
  padding: 10rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.history-tag {
  padding: 12rpx 24rpx;
  background: var(--theme-bg-primary);
  color: var(--theme-text-secondary);
  border-radius: 999rpx;
  font-size: 26rpx;
  border: 1rpx solid var(--theme-border-light);
  transition: all var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

.history-tag:active {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
  transform: scale(0.95);
}

/* 热门搜索 */
.hot-search {
  margin-bottom: 30rpx;
}

.hot-header {
  margin-bottom: 20rpx;
}

.hot-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--theme-text-primary);
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.hot-tag {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
  border-radius: 999rpx;
  font-size: 26rpx;
  transition: transform var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

.hot-tag:active {
  transform: scale(0.95);
}

/* 搜索结果 */
.search-results {
  margin-bottom: 30rpx;
}

.search-stats {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--theme-border-light);
  margin-bottom: 24rpx;
}

.stats-text {
  font-size: 26rpx;
  color: var(--theme-text-secondary);
}

.stats-keyword {
  font-size: 26rpx;
  color: var(--theme-accent-start);
  font-weight: bold;
  margin-left: 10rpx;
}

/* 文章列表 */
.posts-list {
  margin-bottom: 30rpx;
}

.post-card {
  background: var(--theme-bg-primary);
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
  transition: transform var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

.post-card:active {
  transform: scale(0.98);
}

.post-cover {
  width: 100%;
  height: 300rpx;
  display: block;
}

.post-content {
  padding: 30rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--theme-text-primary);
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.post-summary {
  font-size: 26rpx;
  color: var(--theme-text-secondary);
  line-height: 1.6;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: var(--theme-text-muted);
}

.meta-icon {
  margin-right: 8rpx;
  font-size: 22rpx;
}

.meta-text {
  font-size: 22rpx;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 6rpx 12rpx;
  background-color: var(--theme-bg-light);
  color: var(--theme-primary);
  border-radius: 999rpx;
  font-size: 20rpx;
  border: 1rpx solid var(--theme-border-light);
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin: 30rpx 0;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid var(--theme-border-light);
  border-top: 3rpx solid var(--theme-accent-start);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: var(--theme-text-muted);
}

.load-more-btn {
  padding: 20rpx 40rpx;
  background: var(--theme-bg-primary);
  color: var(--theme-accent-start);
  border: 1rpx solid var(--theme-accent-start);
  border-radius: 32rpx;
  font-size: 26rpx;
  display: inline-block;
  transition: all var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

.load-more-btn:active {
  background: var(--theme-accent-start);
  color: var(--theme-text-white);
}

/* 空结果 */
.empty-result {
  text-align: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--theme-text-primary);
  margin-bottom: 10rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: var(--theme-text-muted);
}

/* 搜索建议 */
.search-suggestions {
  background: var(--theme-bg-primary);
  border-radius: 32rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.suggestion-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
}

.suggestion-text {
  font-size: 28rpx;
  color: var(--theme-text-secondary);
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading .loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border-width: 4rpx;
  margin-bottom: 20rpx;
}

.loading .loading-text {
  font-size: 28rpx;
}

/* 错误状态 */
.error {
  text-align: center;
  padding: 100rpx 30rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

/* 高亮样式 */
.highlight {
  background-color: var(--theme-accent-light);
  color: var(--theme-text-primary);
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
}

