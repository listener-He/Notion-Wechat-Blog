/* pages/search/index.wxss */

.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 搜索头部 */
.search-header {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  margin-left: 20rpx;
}

.search-icon {
  font-size: 28rpx;
  color: white;
}

/* 搜索历史 */
.search-history {
  margin-bottom: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.history-clear {
  font-size: 24rpx;
  color: #999;
  padding: 10rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.history-tag {
  padding: 12rpx 24rpx;
  background: white;
  color: #666;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s ease;
}

.history-tag:active {
  background: #667eea;
  color: white;
  transform: scale(0.95);
}

/* 热门搜索 */
.hot-search {
  margin-bottom: 30rpx;
}

.hot-header {
  margin-bottom: 20rpx;
}

.hot-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.hot-tag {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 30rpx;
  font-size: 26rpx;
  transition: transform 0.2s ease;
}

.hot-tag:active {
  transform: scale(0.95);
}

/* 搜索结果 */
.search-results {
  margin-bottom: 30rpx;
}

.search-stats {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 30rpx;
}

.stats-text {
  font-size: 26rpx;
  color: #666;
}

.stats-keyword {
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
  margin-left: 10rpx;
}

/* 文章列表 */
.posts-list {
  margin-bottom: 30rpx;
}

.post-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.post-card:active {
  transform: scale(0.98);
}

.post-cover {
  width: 100%;
  height: 300rpx;
  display: block;
}

.post-content {
  padding: 30rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.post-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.meta-icon {
  margin-right: 8rpx;
  font-size: 22rpx;
}

.meta-text {
  font-size: 22rpx;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 6rpx 12rpx;
  background-color: #e3f2fd;
  color: #1976d2;
  border-radius: 16rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(25, 118, 210, 0.2);
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin: 30rpx 0;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.load-more-btn {
  padding: 20rpx 40rpx;
  background: white;
  color: #667eea;
  border: 1rpx solid #667eea;
  border-radius: 50rpx;
  font-size: 26rpx;
  display: inline-block;
  transition: all 0.2s ease;
}

.load-more-btn:active {
  background: #667eea;
  color: white;
}

/* 空结果 */
.empty-result {
  text-align: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: #999;
}

/* 搜索建议 */
.search-suggestions {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.suggestion-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
}

.suggestion-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading .loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border-width: 4rpx;
  margin-bottom: 20rpx;
}

.loading .loading-text {
  font-size: 28rpx;
}

/* 错误状态 */
.error {
  text-align: center;
  padding: 100rpx 30rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

/* 高亮样式 */
.highlight {
  background-color: #ffeb3b;
  color: #333;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .search-box {
    padding: 0 20rpx;
  }
  
  .post-content {
    padding: 20rpx;
  }
  
  .post-title {
    font-size: 28rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .search-box,
  .post-card,
  .search-suggestions {
    background: #2a2a2a;
  }
  
  .search-input {
    color: #fff;
  }
  
  .search-input::placeholder {
    color: #999;
  }
  
  .history-title,
  .hot-title,
  .post-title,
  .empty-text {
    color: #fff;
  }
  
  .history-tag {
    background: #3a3a3a;
    color: #fff;
    border-color: #555;
  }
  
  .suggestion-text {
    color: #ccc;
  }
}