/* pages/reading-history/index.wxss */
.reading-history-container {
  min-height: 100vh;
  background: var(--theme-bg-primary);
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--theme-text-primary);
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--theme-text-secondary);
}

/* 标签页导航 */
.tab-nav {
  display: flex;
  background: var(--theme-bg-primary);
  border-radius: 32rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.tab-item {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  transition: all var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

.tab-item.active {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: var(--theme-error);
  color: var(--theme-text-white);
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 999rpx;
  min-width: 32rpx;
  text-align: center;
}

.tab-item.active .tab-badge {
  background: rgba(255, 255, 255, 0.3);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--theme-border-light);
  border-top: 4rpx solid var(--theme-accent-start);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--theme-text-secondary);
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--theme-error);
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--theme-bg-primary);
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.sort-options {
  display: flex;
  align-items: center;
}

.toolbar-label {
  font-size: 26rpx;
  color: var(--theme-text-secondary);
  margin-right: 16rpx;
}

.sort-item {
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: var(--theme-text-secondary);
  margin-right: 12rpx;
  transition: all var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

.sort-item.active {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
}

.toolbar-actions {
  display: flex;
  gap: 16rpx;
}

.filter-btn, .clear-btn {
  background: none;
  border: 2rpx solid var(--theme-border);
  border-radius: 16rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: var(--theme-text-secondary);
}

.clear-btn {
  border-color: var(--theme-error);
  color: var(--theme-error);
}

.toolbar-info {
  display: flex;
  align-items: center;
}

.info-text {
  font-size: 26rpx;
  color: var(--theme-text-secondary);
}

/* 筛选面板 */
.filter-panel {
  background: var(--theme-bg-primary);
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.filter-title {
  font-size: 28rpx;
  color: var(--theme-text-primary);
  margin-bottom: 20rpx;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-tag {
  padding: 12rpx 20rpx;
  border: 2rpx solid var(--theme-border);
  border-radius: 999rpx;
  font-size: 24rpx;
  color: var(--theme-text-secondary);
  transition: all var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

.filter-tag.active {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  border-color: var(--theme-accent-start);
  color: var(--theme-text-white);
}

/* 历史记录列表 */
.history-list, .favorites-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item, .favorite-item {
  background: var(--theme-bg-primary);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
  transition: all var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.history-item:active, .favorite-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx var(--theme-shadow-light);
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--theme-text-primary);
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.item-actions {
  display: flex;
  gap: 8rpx;
}

.delete-btn, .unfavorite-btn {
  background: none;
  border: 2rpx solid var(--theme-error);
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  color: var(--theme-error);
}

.item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.item-category {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.item-time, .item-reading-time {
  font-size: 24rpx;
  color: var(--theme-text-secondary);
}

.item-excerpt {
  font-size: 26rpx;
  color: var(--theme-text-light);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 16rpx;
}

.relative-time {
  font-size: 22rpx;
  color: var(--theme-text-muted);
  text-align: center;
}

.favorite-indicator {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.favorite-icon {
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: var(--theme-text-primary);
  margin-bottom: 16rpx;
  font-weight: 600;
}

.empty-subtitle {
  font-size: 26rpx;
  color: var(--theme-text-secondary);
  line-height: 1.5;
}

/* 统计页面 */
.stats-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.stats-section {
  background: var(--theme-bg-primary);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--theme-text-primary);
  margin-bottom: 24rpx;
  display: block;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, var(--theme-success-start) 0%, var(--theme-success-end) 100%);
  border-radius: 16rpx;
  color: var(--theme-text-white);
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.habit-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.habit-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.habit-label {
  font-size: 26rpx;
  color: var(--theme-text-secondary);
}

.habit-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--theme-text-primary);
}

.category-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.category-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: var(--theme-bg-secondary);
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--theme-text-primary);
}

.category-count {
  font-size: 22rpx;
  color: var(--theme-text-secondary);
}

.monthly-stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.month-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid var(--theme-border-light);
}

.month-item:last-child {
  border-bottom: none;
}

.month-name {
  font-size: 26rpx;
  color: var(--theme-text-primary);
  font-weight: 500;
}

.month-data {
  display: flex;
  gap: 16rpx;
}

.month-count, .month-time {
  font-size: 24rpx;
  color: var(--theme-text-secondary);
}

/* 入场动画 */
.entrance-animation {
  animation: slideInUp var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

