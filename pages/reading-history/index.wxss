/* pages/reading-history/index.wxss */
.reading-history-container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--color-background, #f5f7fa) 0%, var(--color-secondary, #c3cfe2) 100%);
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--color-text-primary, #2c3e50);
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--color-text-secondary, #7f8c8d);
}

/* 标签页导航 */
.tab-nav {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, var(--color-accent, #667eea) 0%, var(--color-accent-dark, #764ba2) 100%);
  color: white;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: var(--color-error, #e74c3c);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.tab-item.active .tab-badge {
  background: rgba(255, 255, 255, 0.3);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--color-border-light, #f3f3f3);
  border-top: 4rpx solid var(--color-accent, #667eea);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: #e74c3c;
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.sort-options {
  display: flex;
  align-items: center;
}

.toolbar-label {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-right: 16rpx;
}

.sort-item {
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #7f8c8d;
  margin-right: 12rpx;
  transition: all 0.3s ease;
}

.sort-item.active {
  background: #667eea;
  color: white;
}

.toolbar-actions {
  display: flex;
  gap: 16rpx;
}

.filter-btn, .clear-btn {
  background: none;
  border: 2rpx solid #bdc3c7;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: #7f8c8d;
}

.clear-btn {
  border-color: #e74c3c;
  color: #e74c3c;
}

.toolbar-info {
  display: flex;
  align-items: center;
}

.info-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 筛选面板 */
.filter-panel {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-title {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-tag {
  padding: 12rpx 20rpx;
  border: 2rpx solid #bdc3c7;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #7f8c8d;
  transition: all 0.3s ease;
}

.filter-tag.active {
  background: #667eea;
  border-color: #667eea;
  color: white;
}

/* 历史记录列表 */
.history-list, .favorites-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item, .favorite-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.history-item:active, .favorite-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.item-actions {
  display: flex;
  gap: 8rpx;
}

.delete-btn, .unfavorite-btn {
  background: none;
  border: 2rpx solid #e74c3c;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  color: #e74c3c;
}

.item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.item-category {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.item-time, .item-reading-time {
  font-size: 24rpx;
  color: #7f8c8d;
}

.item-excerpt {
  font-size: 26rpx;
  color: #95a5a6;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 16rpx;
}

.relative-time {
  font-size: 22rpx;
  color: #bdc3c7;
  text-align: center;
}

.favorite-indicator {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.favorite-icon {
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
}

/* 统计页面 */
.stats-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.stats-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
  display: block;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 12rpx;
  color: white;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.habit-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.habit-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.habit-label {
  font-size: 26rpx;
  color: #7f8c8d;
}

.habit-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.category-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.category-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f8f9fa;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
}

.category-name {
  font-size: 24rpx;
  color: #2c3e50;
}

.category-count {
  font-size: 22rpx;
  color: #7f8c8d;
}

.monthly-stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.month-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #ecf0f1;
}

.month-item:last-child {
  border-bottom: none;
}

.month-name {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 500;
}

.month-data {
  display: flex;
  gap: 16rpx;
}

.month-count, .month-time {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 入场动画 */
.entrance-animation {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .toolbar {
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
  }
  
  .sort-options {
    justify-content: center;
  }
  
  .toolbar-actions {
    justify-content: center;
  }
}