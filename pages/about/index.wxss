/* pages/about/index.wxss */

.container { padding: 20rpx; padding-bottom: 120rpx; background-color: var(--theme-bg-primary); min-height: 100vh; }

/* 作者信息卡片 */
.author-card { margin-bottom: 30rpx; padding: 32rpx; background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%); color: var(--theme-text-white); border-radius: 16rpx; box-shadow: 0 8rpx 24rpx var(--theme-shadow); }

.author-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.author-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}



.author-mbti {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 15rpx;
}

.mbti-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.mbti-type {
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.mbti-desc {
  font-size: 22rpx;
  opacity: 0.7;
}

.author-description {
  font-size: 26rpx;
  line-height: 1.6;
  opacity: 0.9;
  margin-top: 15rpx;
}

.infj-traits {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  width: 100%;
}

.traits-container {
  display: flex;
  gap: 12rpx;
  width: max-content;
  padding: 0 20rpx;
}

.trait-item {
  font-size: 14rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(5rpx);
  white-space: nowrap;
  text-align: center;
  min-width: 100rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.trait-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

/* 统计信息 */
.stats-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--theme-text-primary);
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.stats-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; }

.stat-card { background: var(--theme-bg-primary); padding: 24rpx; border-radius: 16rpx; text-align: center; box-shadow: 0 4rpx 20rpx var(--theme-shadow); }

.stat-card:active {
  transform: scale(0.98);
}

.stat-number { font-size: var(--font-size-xl); font-weight: var(--font-weight-bold); color: var(--theme-accent-end); margin-bottom: 8rpx; }

.stat-label { font-size: var(--font-size-sm); color: var(--theme-text-secondary); }

/* 统计标题行 */
.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.last-update-text {
  font-size: 22rpx;
  color: var(--theme-text-muted);
  opacity: 0.8;
}

/* 最新文章 */
.latest-posts-section {
  margin-bottom: 30rpx;
}

.latest-posts { background: var(--theme-bg-primary); border-radius: 16rpx; overflow: hidden; box-shadow: 0 4rpx 20rpx var(--theme-shadow); }

.latest-post-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid var(--theme-border-light);
  transition: background-color 0.2s ease;
}

.latest-post-item:last-child {
  border-bottom: none;
}

.latest-post-item:active { background-color: var(--theme-bg-secondary); }

.latest-post-cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.latest-post-info {
  flex: 1;
  min-width: 0;
}

.latest-post-title { font-size: var(--font-size-base); color: var(--theme-text-primary); margin-bottom: 8rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

.latest-post-date { font-size: var(--font-size-sm); color: var(--theme-text-secondary); }

/* 社交联系 */
.social-section {
  margin-bottom: 30rpx;
}

.social-links { background: var(--theme-bg-primary); border-radius: 16rpx; overflow: hidden; box-shadow: 0 4rpx 20rpx var(--theme-shadow); }

.social-link {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid var(--theme-border-light);
  transition: background-color 0.2s ease;
}

.social-link:last-child {
  border-bottom: none;
}

.social-link:active { background-color: var(--theme-bg-secondary); }

.social-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.social-text { font-size: var(--font-size-base); color: var(--theme-text-primary); }

/* 联系客服 */
.contact-section {
  margin-bottom: 30rpx;
}

.contact-btn { width: 100%; background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%); color: var(--theme-text-white); border: none; border-radius: 16rpx; padding: 24rpx; font-size: var(--font-size-md); display: flex; align-items: center; justify-content: center; box-shadow: 0 8rpx 24rpx var(--theme-shadow); }

.contact-btn:active {
  transform: scale(0.98);
}

.contact-btn::after {
  border: none;
}

.contact-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.contact-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 关于博客 */
.about-section {
  margin-bottom: 30rpx;
}

.about-content { background: var(--theme-bg-primary); border-radius: 16rpx; padding: 24rpx; box-shadow: 0 4rpx 20rpx var(--theme-shadow); }

.about-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.about-item:last-child {
  margin-bottom: 0;
}

.about-label { font-size: var(--font-size-base); color: var(--theme-text-secondary); width: 160rpx; flex-shrink: 0; }

.about-value { font-size: var(--font-size-base); color: var(--theme-text-primary); flex: 1; word-break: break-all; }

/* 加载和错误状态 */
.loading {
  text-align: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--theme-text-muted);
}

.error {
  text-align: center;
  padding: 60rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--theme-text-muted);
  margin-bottom: 30rpx;
}

