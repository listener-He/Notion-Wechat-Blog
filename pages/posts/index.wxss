/* pages/posts/index.wxss */

.container {
  padding-bottom: 120rpx; /* 为底部tab留出空间 */
}

/* 时间问候样式 */
.time-greeting {
  margin-top: 20rpx;
  padding: 16rpx 24rpx;
  background: var(--color-hover);
  border-radius: 20rpx;
  border: 1rpx solid var(--color-divider);
}

.greeting-text {
  font-size: 26rpx;
  color: var(--color-accent);
  font-weight: 500;
  line-height: 1.4;
}

/* 情感化问候样式 */
.emotional-greeting {
  margin-top: 24rpx;
  padding: 24rpx;
  background: var(--color-secondary);
  border-radius: 20rpx;
  border: 1rpx solid var(--color-divider);
  box-shadow: var(--shadow);
  backdrop-filter: blur(12rpx);
  position: relative;
  overflow: hidden;
}

.emotional-greeting::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--color-primary), var(--color-accent), var(--color-primary));
  background-size: 200% 100%;
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { background-position: 200% 0; }
  50% { background-position: -200% 0; }
}

.greeting-primary {
  margin-bottom: 20rpx;
  text-align: center;
}

.greeting-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-primary);
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.greeting-message {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-primary);
  line-height: 1.5;
  font-weight: 400;
}

.author-status {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: var(--color-hover);
  border-radius: 16rpx;
  margin: 16rpx 0;
  transition: all 0.3s ease;
  cursor: pointer;
}

.author-status:active {
  transform: scale(0.98);
  background: var(--color-active);
}

.status-emoji {
  font-size: 36rpx;
  margin-right: 16rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.status-info {
  flex: 1;
}

.status-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--color-primary);
  margin-bottom: 4rpx;
}

.status-message {
  display: block;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-bottom: 4rpx;
  line-height: 1.4;
}

.status-time {
  display: block;
  font-size: 22rpx;
  color: var(--color-text-hint);
  font-weight: 300;
}

.special-date-egg {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  background: var(--color-hover);
  border-radius: 16rpx;
  margin: 16rpx 0;
  border: 1rpx solid var(--color-divider);
}

.egg-emoji {
  font-size: 32rpx;
  margin-right: 12rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-8rpx); }
  60% { transform: translateY(-4rpx); }
}

.egg-message {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 500;
  text-align: center;
  line-height: 1.4;
}

.midnight-reader-egg {
  padding: 16rpx 20rpx;
  background: var(--color-hover);
  border-radius: 16rpx;
  margin: 16rpx 0;
  border: 1rpx solid var(--color-divider);
  text-align: center;
}

.midnight-message {
  display: block;
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.midnight-advice {
  display: block;
  font-size: 22rpx;
  color: var(--color-text-secondary);
  font-weight: 300;
}

.encouragement-btn {
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
  border-radius: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
  box-shadow: var(--shadow);
}

.encouragement-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-hover);
}

.btn-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

/* 一言展示样式 */
.hitokoto-container {
  margin-top: 24rpx;
  padding: 24rpx;
  background: var(--color-secondary);
  border-radius: 16rpx;
  border: 1rpx solid var(--color-divider);
  box-shadow: var(--shadow);
  backdrop-filter: blur(10rpx);
  position: relative;
}

.hitokoto-content {
  cursor: pointer;
  transition: all 0.3s ease;
}

.hitokoto-content:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.hitokoto-text {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.6;
  font-weight: 400;
  display: block;
  margin-bottom: 12rpx;
  font-style: italic;
}

.hitokoto-author {
  text-align: right;
  margin-top: 16rpx;
}

.hitokoto-author text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  font-weight: 300;
}

.hitokoto-refresh {
  position: absolute;
  top: 8rpx;
  right: 12rpx;
  opacity: 0.6;
}

.refresh-hint {
  font-size: 20rpx;
  color: var(--color-text-hint);
  font-weight: 300;
}

/* 主题过渡动画 */
.theme-transition {
  transition: opacity 300ms ease-in-out;
}

/* 搜索框容器 */
.search-container {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 0;
  margin: 0 -20rpx 20rpx -20rpx;
  background: var(--color-background);
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--color-secondary);
  border-radius: 20rpx;
  margin: 0 20rpx;
  padding: 12rpx;
  border: 1rpx solid var(--color-divider);
}

.search-input {
  flex: 1;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  background: transparent;
  border: none;
  outline: none;
  line-height: 1.4;
  min-width: 0;
}

.search-btn, .reading-history-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  margin-left: 8rpx;
}

.search-btn {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
  color: var(--color-text-inverse);
}

.reading-history-btn {
  background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-primary) 100%);
  color: var(--color-text-inverse);
}

.search-btn:active, .reading-history-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.search-btn .iconfont, .reading-history-btn .iconfont {
  font-size: 32rpx;
}

/* 搜索历史 */
.search-history {
  background: var(--color-background);
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--color-divider);
}

.search-history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  color: var(--color-text-primary);
  font-weight: 600;
}

.clear-history {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  padding: 8rpx 16rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  background: var(--color-hover);
  color: var(--color-text-secondary);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 1rpx solid var(--color-divider);
  transition: all 0.2s ease;
}

.history-tag:active {
  background: var(--color-active);
  transform: scale(0.95);
}

/* 筛选栏容器 */
.filter-container {
  margin-bottom: 20rpx;
}

.filter-bar {
  white-space: nowrap;
}

/* 文章卡片增强动画 */
.post-card {
  animation: fadeInUp 0.6s ease-out;
}

.post-card:nth-child(1) { animation-delay: 0.1s; }
.post-card:nth-child(2) { animation-delay: 0.2s; }
.post-card:nth-child(3) { animation-delay: 0.3s; }
.post-card:nth-child(4) { animation-delay: 0.4s; }
.post-card:nth-child(5) { animation-delay: 0.5s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 文章封面增强 */
.post-cover {
  transition: transform 0.4s ease;
}

/* 页面特定样式增强 */
.posts-container {
  position: relative;
}

/* 空状态动画 */
.empty {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 按钮样式 - 提高可见度 */
.btn-secondary {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
  color: var(--color-text-inverse);
  border: none;
  padding: 20rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: var(--shadow);
}

.btn-secondary:active {
  background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-accent-dark) 100%);
  transform: translateY(2rpx);
  box-shadow: var(--shadow-hover);
  color: var(--color-text-inverse);
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .page-title {
    font-size: 40rpx;
  }
  
  .page-subtitle {
    font-size: 24rpx;
  }
  
  .filter-item {
    font-size: 24rpx;
    padding: 16rpx 24rpx;
  }
}