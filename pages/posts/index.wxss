/* pages/posts/index.wxss */

.container {
  padding-bottom: 120rpx; /* 为底部tab留出空间 */
}

/* 时间问候样式 */
.time-greeting {
  margin-top: 20rpx;
  padding: 16rpx 24rpx;
  background: var(--theme-bg-light);
  border-radius: 16rpx;
  border: 1rpx solid var(--theme-border-light);
}

.greeting-text {
  font-size: 26rpx;
  color: var(--theme-accent);
  font-weight: 500;
  line-height: 1.4;
}

/* 情感化问候样式 */
.emotional-greeting {
  margin-top: 24rpx;
  padding: 24rpx;
  background: var(--theme-bg-secondary);
  border-radius: 20rpx;
  border: 1rpx solid var(--theme-border-light);
  box-shadow: 0 4rpx 20rpx var(--theme-shadow);
  position: relative;
  overflow: hidden;
}

.emotional-greeting::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--theme-accent-start), var(--theme-accent-end), var(--theme-accent-start));
  background-size: 200% 100%;
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { background-position: 200% 0; }
  50% { background-position: -200% 0; }
}

.greeting-primary {
  margin-bottom: 20rpx;
  text-align: center;
}

.greeting-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--theme-text-primary);
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.greeting-message {
  display: block;
  font-size: 26rpx;
  color: var(--theme-text-secondary);
  line-height: 1.5;
  font-weight: 400;
}

.author-status {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: var(--theme-bg-light);
  border-radius: 16rpx;
  margin: 16rpx 0;
  transition: all 0.3s ease;
  cursor: pointer;
}

.author-status:active {
  transform: scale(0.98);
  background: var(--theme-bg-secondary);
}

.status-emoji {
  font-size: 36rpx;
  margin-right: 16rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.status-info {
  flex: 1;
}

.status-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--theme-text-primary);
  margin-bottom: 4rpx;
}

.status-message {
  display: block;
  font-size: 24rpx;
  color: var(--theme-text-secondary);
  margin-bottom: 4rpx;
  line-height: 1.4;
}

.status-time {
  display: block;
  font-size: 22rpx;
  color: var(--theme-text-muted);
  font-weight: 300;
}

.special-date-egg {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  background: var(--theme-bg-light);
  border-radius: 16rpx;
  margin: 16rpx 0;
  border: 1rpx solid var(--theme-border-light);
}

.egg-emoji {
  font-size: 32rpx;
  margin-right: 12rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-8rpx); }
  60% { transform: translateY(-4rpx); }
}

.egg-message {
  font-size: 26rpx;
  color: var(--theme-text-primary);
  font-weight: 500;
  text-align: center;
  line-height: 1.4;
}

.midnight-reader-egg {
  padding: 16rpx 20rpx;
  background: var(--theme-bg-light);
  border-radius: 16rpx;
  margin: 16rpx 0;
  border: 1rpx solid var(--theme-border-light);
  text-align: center;
}

.midnight-message {
  display: block;
  font-size: 26rpx;
  color: var(--theme-text-primary);
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.midnight-advice {
  display: block;
  font-size: 22rpx;
  color: var(--theme-text-secondary);
  font-weight: 300;
}

.encouragement-btn {
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx var(--theme-shadow);
}

.encouragement-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-hover);
}

.btn-text {
  font-size: 26rpx;
  color: var(--theme-text-white);
  font-weight: 500;
}

/* 一言展示样式 */
.hitokoto-container {
  margin-top: 24rpx;
  padding: 24rpx;
  background: var(--theme-bg-secondary);
  border-radius: 16rpx;
  border: 1rpx solid var(--theme-border-light);
  box-shadow: 0 4rpx 20rpx var(--theme-shadow);
  backdrop-filter: blur(10rpx);
  position: relative;
}

.hitokoto-content {
  cursor: pointer;
  transition: all 0.3s ease;
}

.hitokoto-content:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.hitokoto-text {
  font-size: 28rpx;
  color: var(--theme-text-primary);
  line-height: 1.6;
  font-weight: 400;
  display: block;
  margin-bottom: 12rpx;
  font-style: italic;
}

.hitokoto-author {
  text-align: right;
  margin-top: 16rpx;
}

.hitokoto-author text {
  font-size: 22rpx;
  color: var(--theme-text-secondary);
  font-weight: 300;
}

.hitokoto-refresh {
  position: absolute;
  top: 8rpx;
  right: 12rpx;
  opacity: 0.6;
}

.refresh-hint {
  font-size: 20rpx;
  color: var(--theme-text-muted);
  font-weight: 300;
}

/* 主题过渡动画 */
.theme-transition {
  transition: opacity 300ms ease-in-out;
}

/* 搜索框容器 */
.search-container {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 0;
  margin: 0 -20rpx 20rpx -20rpx;
  background: var(--theme-bg-primary);
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--theme-bg-secondary);
  border-radius: 32rpx;
  margin: 0 20rpx;
  padding: 12rpx 20rpx;
  border: 1rpx solid var(--theme-border-light);
  box-shadow: 0 4rpx 20rpx var(--theme-shadow);
}
.theme-light .search-box { background: rgba(255,255,255,0.96); }
.theme-dark .search-box { background: rgba(22,26,36,0.7); }

.search-input {
  flex: 1;
  padding: 16rpx 20rpx 16rpx 20rpx;
  font-size: 26rpx;
  background: transparent;
  border: none;
  outline: none;
  line-height: 1.6;
  min-width: 0;
  height: 72rpx;
  box-sizing: border-box;
  padding-right: 24rpx;
}
.search-input::placeholder { color: var(--theme-text-secondary); }

.search-btn, .reading-history-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  margin-left: 8rpx;
}

.search-btn {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
}

.reading-history-btn {
  background: linear-gradient(135deg, var(--theme-accent-end) 0%, var(--theme-accent-start) 100%);
  color: var(--theme-text-white);
}

.search-btn:active, .reading-history-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.search-btn .iconfont, .reading-history-btn .iconfont {
  font-size: 32rpx;
}

/* 搜索历史 */
.search-history {
  background: var(--theme-bg-primary);
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx var(--theme-shadow);
  border: 1rpx solid var(--theme-border-light);
}

.search-history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  color: var(--theme-text-primary);
  font-weight: 600;
}

.clear-history {
  font-size: 24rpx;
  color: var(--theme-text-secondary);
  padding: 8rpx 16rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  background: var(--theme-bg-light);
  color: var(--theme-text-secondary);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 1rpx solid var(--theme-border-light);
  transition: all 0.2s ease;
}

.history-tag:active {
  background: var(--theme-bg-secondary);
  transform: scale(0.95);
}

/* 筛选栏容器 */
.filter-container {
  margin-bottom: 20rpx;
}

.filter-bar {
  white-space: nowrap;
}

/* 分类筛选条 */
.filter-scroll {
  padding: 0 20rpx;
}

.filter-categories {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  border: 1rpx solid var(--theme-border-light);
  background: var(--theme-bg-primary);
  color: var(--theme-text-secondary);
  font-size: 24rpx;
  transition: transform var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1)),
              box-shadow var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
}
.filter-item.pop { transform: scale(1.03); border-width: 2rpx; }

.filter-item.active {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
  border-color: transparent;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.filter-item:active {
  transform: scale(0.96);
}

/* 文章卡片增强动画 */
.post-card {
  animation: fadeInUp var(--duration-base, 250ms) var(--timing-function, cubic-bezier(0.2, 0, 0.2, 1));
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx var(--theme-shadow);
}

.post-card:nth-child(1) { animation-delay: 0.1s; }
.post-card:nth-child(2) { animation-delay: 0.2s; }
.post-card:nth-child(3) { animation-delay: 0.3s; }
.post-card:nth-child(4) { animation-delay: 0.4s; }
.post-card:nth-child(5) { animation-delay: 0.5s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 文章封面增强 */
.post-cover {
  transition: opacity 300ms ease, transform 0.4s ease;
  opacity: 0;
  width: 100%;
  height: 360rpx;
  display: block;
}
.post-cover.loaded { opacity: 1; }
.post-cover-wrap { position: relative; overflow: hidden; }
.cover-placeholder { position: absolute; top: 0; left: 0; width: 100%; height: 360rpx; z-index: 2; background: linear-gradient(135deg, #f7f8fa 0%, #eaeef2 100%); pointer-events: none; }
.cover-placeholder.skeleton { background: linear-gradient(90deg, #f2f3f5 0%, #e7e9ee 20%, #f2f3f5 40%, #f2f3f5 100%); background-size: 200% 100%; animation: skeletonShimmer 1.2s ease-in-out infinite; }
.theme-dark .cover-placeholder { background: linear-gradient(135deg, #141824 0%, #0f1422 100%); }
.theme-dark .cover-placeholder.skeleton { background: linear-gradient(90deg, #101523 0%, #151b2b 20%, #101523 40%, #101523 100%); background-size: 200% 100%; animation: skeletonShimmer 1.2s ease-in-out infinite; }

@keyframes skeletonShimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 预加载哨兵 */
.load-more-sentinel {
  height: 2rpx;
  width: 100%;
}

/* 页面特定样式增强 */
.posts-container {
  position: relative;
}

/* 标签样式统一 */
/* 移除标签样式 */

/* 空状态动画 */
.empty {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 按钮样式 - 提高可见度 */
.btn-secondary {
  background: linear-gradient(135deg, var(--theme-accent-start) 0%, var(--theme-accent-end) 100%);
  color: var(--theme-text-white);
  border: none;
  padding: 20rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.btn-secondary:active {
  background: linear-gradient(135deg, var(--theme-accent-end) 0%, var(--theme-accent-start) 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx var(--theme-shadow-light);
  color: var(--theme-text-white);
}

/* 响应式优化 */
/* 移除不支持的媒体查询 */
.search-suggestions {
  background: var(--theme-bg-primary);
  border: 1rpx solid var(--theme-border-light);
  border-radius: 16rpx;
  margin: 12rpx 20rpx 0 20rpx;
  box-shadow: 0 8rpx 24rpx var(--theme-shadow);
}

.suggestion-section { padding: 12rpx 16rpx; }
.suggestion-title { font-size: 24rpx; color: var(--theme-text-secondary); display: block; margin-bottom: 8rpx; }
.suggestion-list { display: flex; flex-wrap: wrap; gap: 12rpx; }
.suggestion-item { padding: 10rpx 16rpx; border-radius: 999rpx; border: 1rpx solid var(--theme-border-light); color: var(--theme-text-secondary); background: var(--theme-bg-light); }
.suggestion-item:active { transform: scale(0.96); box-shadow: 0 8rpx 24rpx var(--theme-shadow); }

/* 选中分类固定浮动条 */
.filter-container { position: sticky; top: 120rpx; z-index: 90; background: var(--theme-bg-primary); }
.active-category-pill { display: inline-flex; align-items: center; gap: 8rpx; margin: 0 20rpx 8rpx; padding: 8rpx 12rpx; border-radius: 999rpx; background: linear-gradient(135deg, var(--theme-accent-start), var(--theme-accent-end)); color: var(--theme-text-white); box-shadow: 0 8rpx 24rpx var(--theme-shadow); }
.pill-text { font-size: 22rpx; }
.pill-close { width: 32rpx; height: 32rpx; display: flex; align-items: center; justify-content: center; border-radius: 50%; background: rgba(255,255,255,0.2); }
.pill-close:active { transform: scale(0.92); }
/* 标签渐变芯片 */
.tag-chips { display: flex; flex-wrap: wrap; gap: 12rpx; margin: 12rpx 0 8rpx; }
.tag-chip { padding: 8rpx 14rpx; border-radius: 999rpx; color: #fff; font-size: 20rpx; box-shadow: 0 6rpx 18rpx var(--theme-shadow); opacity: 0.95; }
